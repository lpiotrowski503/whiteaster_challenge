doctype
div.item__container(
  *ngFor = 'let item of items; let i = index'
  )
  a.item__link(
    routerLinkActive = 'active',
    [routerLink] = 'item.href'
    )
    img.item__icon(
      [src] = 'item.icon'
      )
    p.item__text
      | {{ item.text }}
    div.item-number__container(
      *ngIf = 'i == 0'
      )
      p.item-number
        | 5
